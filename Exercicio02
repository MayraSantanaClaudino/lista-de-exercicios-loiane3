//Cadastro de usuário usando nome e senha
//May Santana, 2023

import java.util.*;

public class Main
{
	public static void main(String[] args) {
	    
		Scanner scan = new Scanner(System.in);
		
		boolean infoValida = false;
		
		do {
		    
		    System.out.println("Entre com o nome do usuário: ");
		    String nomeUsuario = scan.next();
		    System.out.println("Entre com a senha do usuário: ");
		    String senha = scan.next();
		    
		    if (nomeUsuario.equalsIgnoreCase(senha)){
		        System.out.println("Senha igual a usuário, digite novamente");
		    } else {
		        infoValida = true;
		        System.out.println("Senha e usuários válidos");
		    }
		    
		} while (!infoValida);
		
	}
}
