//Valor total e valor médio gasto em uma coleção de CDs
//May Santana, 2023

import java.util.*;

public class Main
{
	public static void main(String[] args) {
	    
		Scanner scan = new Scanner(System.in);
		
		System.out.println("Informe o número de CDs:");
		int cds = scan.nextInt();
		
		double preco;
		double soma = 0;
		
		for (int i = 1; i <= cds; i++){
		    System.out.println("Informe o valor do cd " + i);
		    preco = scan.nextDouble();
		    
		    soma += preco;
		}
		
		double media = soma / cds;
		System.out.println("Valor médio gasto em cada CD: " + media);
		
	}
}
