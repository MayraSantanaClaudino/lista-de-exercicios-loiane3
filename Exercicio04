//Taxa de crescimento populacional de um pa√≠s
//May Santana, 2023

import java.util.*;

public class Main
{
	public static void main(String[] args) {
	    
		//Scanner scan = new Scanner(System.in);
		
		double popA = 80000;
		double popB = 200000;
		int cont = 0;
		
		while (popA < popB){
		    popA += (popA / 100) * 3;
		    popB += (popB / 100) * 1.5;
		    cont++;
		}
		
		System.out.println(cont);
		
	}
}
